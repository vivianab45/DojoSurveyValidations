@{
    ViewData["Title"] = "Home Page";
}

@model Ninja
    <h1 class= "text-center"> Dojo Survey Form</h1>
    <div class="container">
        <form action="/user/create" method="post">
          <div class="form-group">
            <label  asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="Location">Dojo Location:</label>
            <select asp-for="Location" class="form-control" >
            <option selected disabled value="">Choose...</option>
            <option value="San Jose">San Jose</option>
            <option value="Dallas">Dallas</option>
            <option value="Miami">Miami</option>
            <option value="Monterey">Monterey</option>
            </select>
            <span asp-validation-for="Location" class="text-danger"></span>
          </div>
        <div class="form-group">
            <label asp-for="Language">Favorite Language:</label> 
            <select  asp-for="Language" class="form-select">
            <option selected disabled value="">Choose...</option>
            <option value="C#">C#</option>
            <option value="JAVASCRIPT">JAVASCRIPT</option>
            <option value="PYTHON">PYTHON</option>
            <option value="JAVA">JAVA</option>
            </select>
            <span asp-validation-for="Language" class="text-danger"></span>
        </div>
        <div class="form-group">
        <label asp-for="Comment">Comment (optional)</label>
        <textarea asp-for="Comment" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary float-end">Submit</button>
        </form>
    </div>